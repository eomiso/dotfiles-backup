{
  "languageserver": {
      "ocaml": {
        "command": "ocaml-language-server",
        "args": ["--stdio"],
        "filetypes": ["ocaml", "reason"]
      },
      "ccls": {
        "command": "ccls",
        "filetypes": ["c", "cpp", "c++", "objc", "objcpp"],
        "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
        "initializationOptions": {
          "cache": {
            "directory": "/languageserver/ccls"
          }
        }
      }
  }
}
