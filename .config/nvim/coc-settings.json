{
  "coc.preferences.formatOnType": true,
  "coc.preferences.colorSupport": true,
  "coc.preferences.formatOnTypeFiletypes": ["python"],
  "coc.preferences.rootPatterns": [".git/", ".hg", ".projections.json", "compile_commands.json"],

  "python.linting.enabled": true,
  "python.linting.pep8Enabled": true,
  "python.formatting.provider": "yapf",

  "languageserver": {
    "ocaml": {
      "command": "ocaml-language-server",
      "args": ["--stdio"],
      "filetypes": ["ocaml", "reason"]
    },
    "sourcekit-lsp": {
      "filetypes": ["swift"],
      "command": "sourcekit-lsp"
    },
    "clangd": {
      "filetypes": ["c", "cpp", "cuda", "cc", "objective-c"],
      "command": "clangd"
    }
  }
}
